-- Obnoxious Overlord Script by ChatGPT - You asked for funny AND OP
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local debris = game:GetService("Debris")
local cam = workspace.CurrentCamera
local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local flying, vel = false, nil

-- Funny sound list
local sounds = {
	"http://www.roblox.com/asset/?id=138186576", -- Bruh
	"http://www.roblox.com/asset/?id=911882310", -- REEEE
	"http://www.roblox.com/asset/?id=1313144526", -- Fart
	"http://www.roblox.com/asset/?id=183763512", -- Oof
}

-- Random objects to rain
local objects = {"Banana", "Toilet", "Cat", "TV", "Pizza", "Brick"}

-- FLIGHT
RunService.RenderStepped:Connect(function()
	if flying and vel then
		local dir = Vector3.new()
		if UserInputService:IsKeyDown(Enum.KeyCode.W) then dir += cam.CFrame.LookVector end
		if UserInputService:IsKeyDown(Enum.KeyCode.S) then dir -= cam.CFrame.LookVector end
		if UserInputService:IsKeyDown(Enum.KeyCode.A) then dir -= cam.CFrame.RightVector end
		if UserInputService:IsKeyDown(Enum.KeyCode.D) then dir += cam.CFrame.RightVector end
		if UserInputService:IsKeyDown(Enum.KeyCode.Space) then dir += Vector3.new(0,1,0) end
		if UserInputService:IsKeyDown(Enum.KeyCode.LeftControl) then dir -= Vector3.new(0,1,0) end
		vel.Velocity = dir.Unit * 120
	end
end)

-- FART BLAST (fling players nearby with fart sound)
local function fartBlast()
	for _, p in pairs(Players:GetPlayers()) do
		if p ~= LocalPlayer and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
			local hrp = p.Character.HumanoidRootPart
			if (hrp.Position - char.HumanoidRootPart.Position).Magnitude < 12 then
				local bv = Instance.new("BodyVelocity", hrp)
				bv.Velocity = Vector3.new(math.random(-300,300), 500, math.random(-300,300))
				bv.MaxForce = Vector3.new(1,1,1) * 999999
				debris:AddItem(bv, 0.3)
			end
		end
	end
	local sound = Instance.new("Sound", char.HumanoidRootPart)
	sound.SoundId = "rbxassetid://1313144526"
	sound.Volume = 10
	sound:Play()
	debris:AddItem(sound, 2)
end

-- Loud meme scream
local function playRandomSound()
	local soundId = sounds[math.random(1,#sounds)]
	local s = Instance.new("Sound", char.HumanoidRootPart)
	s.SoundId = soundId
	s.Volume = 10
	s:Play()
	debris:AddItem(s, 3)
end

-- Message spam
local function systemMessage()
	game:GetService("StarterGui"):SetCore("ChatMakeSystemMessage", {
		Text = "⚠️ BOW TO " .. LocalPlayer.Name .. " OR FACE THE FARTS ⚠️",
		Color = Color3.fromRGB(255, 0, 0),
		Font = Enum.Font.GothamBlack,
		TextSize = 22
	})
end

-- Toilet rain
local function rainObjects()
	for i = 1,10 do
		local part = Instance.new("Part", workspace)
		part.Size = Vector3.new(4,4,4)
		part.Position = char.HumanoidRootPart.Position + Vector3.new(math.random(-20,20), 50, math.random(-20,20))
		part.Name = objects[math.random(1, #objects)]
		part.BrickColor = BrickColor.Random()
		part.Anchored = false
		part.CanCollide = true
		part.Material = Enum.Material.Fabric
		part.Velocity = Vector3.new(0, -50, 0)
		local tag = Instance.new("BillboardGui", part)
		tag.Size = UDim2.new(0,100,0,40)
		tag.AlwaysOnTop = true
		local label = Instance.new("TextLabel", tag)
		label.Text = part.Name
		label.TextColor3 = Color3.new(1,1,1)
		label.BackgroundTransparency = 1
		label.Size = UDim2.new(1,0,1,0)
		debris:AddItem(part, 6)
	end
end

-- Toggle flight
local function toggleFly()
	flying = not flying
	if flying then
		vel = Instance.new("BodyVelocity", char.HumanoidRootPart)
		vel.MaxForce = Vector3.new(1,1,1) * 999999
		vel.Velocity = Vector3.zero
	else
		if vel then vel:Destroy() end
	end
end

-- Input binds
UserInputService.InputBegan:Connect(function(input, gpe)
	if gpe then return end
	if input.KeyCode == Enum.KeyCode.E then toggleFly() end
	if input.KeyCode == Enum.KeyCode.F then fartBlast() end
	if input.KeyCode == Enum.KeyCode.R then playRandomSound() end
	if input.KeyCode == Enum.KeyCode.Q then systemMessage() end
	if input.KeyCode == Enum.KeyCode.T then rainObjects() end
end)
