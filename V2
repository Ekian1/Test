-- ONE SCRIPT: SEARCH ALL TOOLS IN GAME & GIVE ON CLICK (PRIVATE SERVER ONLY)

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer

-- SERVER PART: Create RemoteEvent and handle giving tools
if RunService:IsServer() then
    -- Create RemoteEvent if missing
    local remote = ReplicatedStorage:FindFirstChild("GiveToolEvent")
    if not remote then
        remote = Instance.new("RemoteEvent")
        remote.Name = "GiveToolEvent"
        remote.Parent = ReplicatedStorage
    end

    -- Scan all tools in the game (anywhere)
    local function getAllTools()
        local tools = {}
        for _, obj in ipairs(game:GetDescendants()) do
            if obj:IsA("Tool") then
                -- Store tool by name (only first found)
                if not tools[obj.Name] then
                    tools[obj.Name] = obj
                end
            end
        end
        return tools
    end

    local toolsMap = getAllTools()

    remote.OnServerEvent:Connect(function(plr, toolName)
        local tool = toolsMap[toolName]
        if tool and tool:IsA("Tool") then
            local clone = tool:Clone()
            clone.Parent = plr:WaitForChild("Backpack")
        end
    end)

    return
end

-- CLIENT PART

local remote = ReplicatedStorage:WaitForChild("GiveToolEvent")

-- Ask server to scan all tools by making a local copy (we scan client side as well)
local function getAllToolNames()
    local toolNames = {}
    local found = {}
    for _, obj in ipairs(game:GetDescendants()) do
        if obj:IsA("Tool") and not found[obj.Name] then
            found[obj.Name] = true
            table.insert(toolNames, obj.Name)
        end
    end
    table.sort(toolNames)
    return toolNames
end

local toolNames = getAllToolNames()

-- Create GUI
local gui = Instance.new("ScreenGui")
gui.Name = "ToolRequestGui"
gui.Parent = player:WaitForChild("PlayerGui")

local title = Instance.new("TextLabel")
title.Text = "ðŸ§° Get Any Tool in Game"
title.Size = UDim2.new(0, 300, 0, 40)
title.Position = UDim2.new(0, 20, 0.1, 0)
title.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.Parent = gui

local frame = Instance.new("ScrollingFrame")
frame.Size = UDim2.new(0, 300, 0.6, 0)
frame.Position = UDim2.new(0, 20, 0.1 + 40/1080, 0)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.ScrollBarThickness = 6
frame.Parent = gui

local layout = Instance.new("UIListLayout")
layout.Padding = UDim.new(0, 4)
layout.SortOrder = Enum.SortOrder.Name
layout.Parent = frame

-- Add buttons for each tool name
for _, name in ipairs(toolNames) do
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -10, 0, 40)
    button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    button.TextColor3 = Color3.new(1, 1, 1)
    button.Font = Enum.Font.GothamBold
    button.TextSize = 16
    button.Text = "Get: " .. name
    button.Parent = frame

    button.MouseButton1Click:Connect(function()
        remote:FireServer(name)
        button.Text = "âœ… Given: " .. name
    end)
end

-- Adjust canvas size to fit buttons
frame.CanvasSize = UDim2.new(0, 0, 0, #frame:GetChildren() * 44)
