-- ONE SCRIPT: SERVER + CLIENT TOOL GIVER FOR PRIVATE SERVER ONLY

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local ServerStorage = game:GetService("ServerStorage")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer

-- Create RemoteEvent if missing (server only)
local remote = ReplicatedStorage:FindFirstChild("GiveToolEvent")
if not remote and RunService:IsServer() then
    remote = Instance.new("RemoteEvent")
    remote.Name = "GiveToolEvent"
    remote.Parent = ReplicatedStorage
end

-- Ensure Tools folder in ServerStorage (server only)
local toolsFolder = ServerStorage:FindFirstChild("Tools")
if not toolsFolder and RunService:IsServer() then
    toolsFolder = Instance.new("Folder")
    toolsFolder.Name = "Tools"
    toolsFolder.Parent = ServerStorage
end

-- Server: Listen and give tools to player Backpack
if RunService:IsServer() then
    remote.OnServerEvent:Connect(function(plr, toolName)
        local tool = toolsFolder:FindFirstChild(toolName)
        if tool and tool:IsA("Tool") then
            local clone = tool:Clone()
            clone.Parent = plr:WaitForChild("Backpack")
        end
    end)
    return
end

-- CLIENT SIDE BELOW --

-- Wait for RemoteEvent & Tools folder to exist
remote = ReplicatedStorage:WaitForChild("GiveToolEvent")
toolsFolder = ServerStorage:WaitForChild("Tools")

-- Create GUI
local gui = Instance.new("ScreenGui")
gui.Name = "ToolRequestGui"
gui.Parent = player:WaitForChild("PlayerGui")

local title = Instance.new("TextLabel")
title.Text = "ðŸ§° Get Server Tools"
title.Size = UDim2.new(0, 300, 0, 40)
title.Position = UDim2.new(0, 20, 0.1, 0)
title.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.Parent = gui

local frame = Instance.new("ScrollingFrame")
frame.Size = UDim2.new(0, 300, 0.6, 0)
frame.Position = UDim2.new(0, 20, 0.1 + 40/1080, 0)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.ScrollBarThickness = 6
frame.Parent = gui

local layout = Instance.new("UIListLayout")
layout.Padding = UDim.new(0, 4)
layout.SortOrder = Enum.SortOrder.Name
layout.Parent = frame

-- Populate buttons for each Tool found in ServerStorage.Tools
for _, tool in ipairs(toolsFolder:GetChildren()) do
    if tool:IsA("Tool") then
        local button = Instance.new("TextButton")
        button.Size = UDim2.new(1, -10, 0, 40)
        button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        button.TextColor3 = Color3.new(1, 1, 1)
        button.Font = Enum.Font.GothamBold
        button.TextSize = 16
        button.Text = "Get: " .. tool.Name
        button.Parent = frame

        button.MouseButton1Click:Connect(function()
            remote:FireServer(tool.Name)
            button.Text = "âœ… Given: " .. tool.Name
        end)
    end
end

-- Adjust canvas size
frame.CanvasSize = UDim2.new(0, 0, 0, #frame:GetChildren() * 44)
