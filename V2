-- Xeno Exclusive - Chaos Wind Script (Press E to Activate)
-- For educational use in PRIVATE games only

local player = game:GetService("Players").LocalPlayer
local mouse = player:GetMouse()
local debris = game:GetService("Debris")
local runService = game:GetService("RunService")
local userInput = game:GetService("UserInputService")
local tweenService = game:GetService("TweenService")

local radius = 25
local power = 2500
local cooldown = 5
local canCast = true

-- Shockwave Visual
local function createShockwave(position)
	local shock = Instance.new("Part")
	shock.Size = Vector3.new(1, 1, 1)
	shock.Shape = Enum.PartType.Ball
	shock.Material = Enum.Material.Neon
	shock.Color = Color3.fromRGB(0, 200, 255)
	shock.Anchored = true
	shock.CanCollide = false
	shock.CFrame = CFrame.new(position)
	shock.Transparency = 0.5
	shock.Parent = workspace

	local tweenInfo = TweenInfo.new(0.8, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
	local tween = tweenService:Create(shock, tweenInfo, {
		Size = Vector3.new(radius * 2, radius * 2, radius * 2),
		Transparency = 1
	})
	tween:Play()
	debris:AddItem(shock, 1)
end

-- Sound FX
local function playBoom(position)
	local sound = Instance.new("Sound")
	sound.SoundId = "rbxassetid://138186576" -- thunder boom
	sound.Volume = 2
	sound.PlayOnRemove = true
	sound.Parent = workspace
	sound.Position = position
	sound:Destroy()
end

-- Chaos Wind Shockwave
local function fireShockwave()
	if not canCast then return end
	canCast = false

	local char = player.Character
	if not char or not char:FindFirstChild("HumanoidRootPart") then return end
	local pos = char.HumanoidRootPart.Position
	local hitParts = 0

	createShockwave(pos)
	playBoom(pos)

	for _, obj in ipairs(workspace:GetDescendants()) do
		if obj:IsA("BasePart") and obj:IsDescendantOf(char) == false then
			local distance = (obj.Position - pos).Magnitude
			if distance <= radius then
				if obj.Anchored then
					obj.Orientation += Vector3.new(0, math.random(-180, 180), 0)
				else
					local bv = Instance.new("BodyVelocity")
					bv.Velocity = (obj.Position - pos).Unit * power
					bv.MaxForce = Vector3.new(1, 1, 1) * 1e6
					bv.Parent = obj
					debris:AddItem(bv, 0.25)
				end
				hitParts += 1
			end
		end
	end

	print("ðŸ’¨ E Key Chaos Wind! Hit:", hitParts, "parts.")
	wait(cooldown)
	canCast = true
end

-- Bind to E Key
userInput.InputBegan:Connect(function(input, gameProcessed)
	if gameProcessed then return end
	if input.KeyCode == Enum.KeyCode.E then
		fireShockwave()
	end
end)
